<h1 class="mb-4">Films</h1>

<%= link_to 'New film', new_film_path, class: "btn btn-primary btn-lg mb-3" %>

<% @films.each do |film| %>
  <article class="card mb-3">
    <div class=card-body>
      <h2><%= film.name %></h2>

      <section class="card-text">
        <time datatime="<%= film.formatted_created_at %>">
          <small><%= film.formatted_created_at %></small>
        </time>

        <p class="my-2">
          <%= film.description %>
        </p>
      </section>

        <%= link_to 'Edit', edit_film_path(film), class: 'btn btn-secondary' %>
        <%= link_to 'Destroy', film_path(film), class: 'btn btn-danger', data: { method: :delete, confirm: 'Are you sure' } %>
        <%= link_to 'Show', film_path(film), class: 'btn btn-primary' %>

    </div>
  </article>
<% end %>