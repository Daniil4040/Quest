<h2 class="mb-4"><%= @question.title %></h2>

<%= @question.formatted_created_at %>

<h3><%= @question.body %></h3>

<%= link_to "edit", edit_question_path(@question) %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-danger', data: { method: :delete, confirm: 'Are you sure' } %>
<%= link_to "all", questions_path %>

<%= form_with model: [@question, @answer] do |f| %>
    <div class="col-sm-2 col-form-label">
        <%= f.label :body %>
    </div>
    <div class="col-sm-10">
        <%= f.text_area :body %>
    </div>
    <%= f.submit "submit_answer", class:'btn btn-primary' %>
<% end %>