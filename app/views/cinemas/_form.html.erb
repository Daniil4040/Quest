<%= form_with model: @cinemas do |f| %>
    <div class="mb-3 row">
        <%= f.label :name, class:'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.text_field :name, class:'form-control' %>
        </div>
    </div>
    
    <div class="mb-3 row">
        <%= f.label :year, class:'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.text_area :year, class:'form-control' %>
        </div>
    </div>

    <%= f.submit 'submit_cinema', class:'btn btn-primary' %>
<% end %>